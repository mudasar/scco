                                <Label x:Name="lblBirthPlace"
                                       Width="130"
                                       Content="Birth Place" />
                                <TextBox x:Name="txtBirthPlace"
                                         Width="250"
                                         Style="{DynamicResource RoundedTextBox}"
                                         Text="{Binding BirthPlace}" />
                            </StackPanel>
                            <StackPanel x:Name="pnlGender"
                                        Margin="0,4"
                                        Orientation="Horizontal">
                                <Label x:Name="lblGender"
                                       Width="130"
                                       Content="Gender" />
                                <ComboBox x:Name="cboGender"
                                          Width="250"
                                          Style="{DynamicResource RoundedComboBox}"
                                          Text="{Binding Sex}">
                                    <ComboBoxItem x:Name="Item1" Content="Female" />
                                    <ComboBoxItem x:Name="Item2" Content="Male" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel x:Name="pnlCivilStatus"
                                        Margin="0,4"
                                        Orientation="Horizontal">
                                <Label x:Name="lblCivilStatus"
                                       Width="130"
                                       Content="Civil Status" />
