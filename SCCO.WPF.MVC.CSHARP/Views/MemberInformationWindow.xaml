                                    <ComboBoxItem x:Name="IsDivorced" Content="Divorced" />
                                    <ComboBoxItem x:Name="IsSingle" Content="Single" />
                                    <ComboBoxItem x:Name="IsWidowed" Content="Widowed" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel x:Name="pnlDegree"
                                        Margin="0,4"
                                        Orientation="Horizontal">
