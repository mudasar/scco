                                          Width="150"
                                          Style="{DynamicResource RoundedComboBox}"
                                          Text="{Binding HomeOwnership}">
                                    <ComboBoxItem x:Name="IsOwned" Content="Owned" />
                                    <ComboBoxItem x:Name="IsRented" Content="Rented" />
                                    <ComboBoxItem x:Name="IsWithRelatives" Content="With Relatives" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel x:Name="pnlBirthDate"
                                        Margin="0,4"
