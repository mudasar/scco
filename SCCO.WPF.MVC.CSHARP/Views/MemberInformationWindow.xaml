                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Label x:Name="lblAddress"
                                           VerticalAlignment="Top"
                                           Content="Address" />

                                    <StackPanel Grid.Column="1">
                                        <TextBox x:Name="txtAddress1"
                                                 Style="{DynamicResource RoundedTextBox}"
                                                 Text="{Binding Address1}" />
                                        <TextBox x:Name="txtAddress2"
                                                 Margin="0,4,0,2"
                                                 Style="{DynamicResource RoundedTextBox}"
                                                 Text="{Binding Address2}" />
                                        <TextBox x:Name="txtAddress3"
                                                 Margin="0,2,0,0"
                                                 Style="{DynamicResource RoundedTextBox}"
                                                 Text="{Binding Address3}" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
