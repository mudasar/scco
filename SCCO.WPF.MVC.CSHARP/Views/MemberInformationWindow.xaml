            <TabItem x:Name="TabItemMembershipDetails"
                     Background="#66D4D0C8"
                     FontFamily="Ubuntu"
                     Foreground="White"
                     Header="Membership Details"
                     Style="{StaticResource styleTabItemRight}">
                <Grid>
                    <GroupBox x:Name="GroupMembershipInformation"
                              Grid.ColumnSpan="2"
                              Margin="5,0,5,5"
                              BorderBrush="#99FFFFFF"
                              BorderThickness=".2          "
                              Foreground="White"
                              Header="Membership Details">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".7*" />
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="10,0,0,0">
                                <StackPanel x:Name="pnlIsMember" Margin="0,4">
                                    <CheckBox x:Name="chkMember"
                                              Content="Member"
                                              IsChecked="{Binding IsMember}"
                                              Style="{DynamicResource ControlCheckBox}" />
                                    <DatePicker x:Name="dtpMembershipDate"
                                                SelectedDate="{Binding MembershipDate,
                                                                       Converter={StaticResource DateConverter2}}"
                                                Style="{DynamicResource RoundedDatePicker}" />
                                </StackPanel>
                                <StackPanel x:Name="pnlIsClosedAccount"
                                            Margin="0,4"
                                            Orientation="Vertical">
                                    <CheckBox x:Name="chkClosedAccount"
                                              Content="Closed Account"
                                              IsChecked="{Binding IsAccountClosed}"
                                              Style="{DynamicResource ControlCheckBox}" />
                                    <DatePicker x:Name="dtpClosedDate"
                                                SelectedDate="{Binding AccountClosedSince,
                                                                       Converter={StaticResource DateConverter2}}"
                                                Style="{DynamicResource RoundedDatePicker}" />
                                </StackPanel>

                                <StackPanel x:Name="pnlIsPttkMember" Margin="0,4">
                                    <CheckBox x:Name="chkPTTKMember"
                                              Content="PTTK Member"
                                              IsChecked="{Binding IsDamayanMember}"
                                              Style="{DynamicResource ControlCheckBox}" />
                                    <DatePicker x:Name="dtpPTTKDate"
                                                SelectedDate="{Binding DamayanMemberSince,
                                                                       Converter={StaticResource DateConverter2}}"
                                                Style="{DynamicResource RoundedDatePicker}" />
                                </StackPanel>
                                <StackPanel x:Name="pnlPmesDate" Margin="0,4">
                                    <Label x:Name="lblPmesDate"
                                           Margin="0,1"
                                           Content="PMES Date" />
                                    <DatePicker x:Name="dtpPmesDate"
                                                SelectedDate="{Binding PreMembershipSeminarDate,
                                                                       Converter={StaticResource DateConverter2}}"
                                                Style="{DynamicResource RoundedDatePicker}" />
                                </StackPanel>
                                <TextBlock />
                                <StackPanel x:Name="pnlShareCapital">
                                    <StackPanel Margin="0,4">
                                        <Label x:Name="lblSCORNo" Content="SC OR No." />
                                        <TextBox x:Name="txtScOrNo"
                                                 Style="{DynamicResource RoundedTextBox}"
                                                 Text="{Binding ShareCapitalReceiptNo}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,2">
                                        <Label x:Name="lblOrDate"
                                               Margin="0,1"
                                               Content="OR Date" />
                                        <DatePicker x:Name="dtpORDate"
                                                    SelectedDate="{Binding ShareCapitalDepositDate,
                                                                           Converter={StaticResource DateConverter2}}"
                                                    Style="{DynamicResource RoundedDatePicker}" />
                                    </StackPanel>
                                    <StackPanel Margin="0,4">
                                        <Label x:Name="lblScAmount"
                                               Margin="0,1"
                                               Content="SC Amount" />
                                        <TextBox x:Name="txtSCAmount"
                                                 Style="{DynamicResource RoundedTextBox}"
                                                 Text="{Binding ShareCapitalAmount,
                                                                StringFormat=\{0:N\}}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                <StackPanel x:Name="pnlMembershipType" Margin="0,4">
                                    <Label x:Name="lblMembershipType"
                                           Margin="0,1"
                                           Content="Membership Type" />
                                    <ComboBox x:Name="cboMembershipType"
                                              Style="{DynamicResource RoundedComboBox}"
                                              Text="{Binding MembershipType}" />
                                </StackPanel>
                                <StackPanel x:Name="pnlClassification" Margin="0,4">
                                    <Label x:Name="lblClassification"
                                           Margin="0,1"
                                           Content="Classification" />
                                    <ComboBox x:Name="cboClassification"
                                              Style="{DynamicResource RoundedComboBox}"
                                              Text="{Binding Classification}" />
                                </StackPanel>
                                <StackPanel x:Name="pnlArea" Margin="0,4">
                                    <Label x:Name="lblArea"
                                           Margin="0,1"
                                           Content="Area" />
                                    <ComboBox x:Name="cboArea"
                                              Style="{DynamicResource RoundedComboBox}"
                                              Text="{Binding AreaCode}" />
                                </StackPanel>
                                <StackPanel x:Name="pnlCollector" Margin="0,4">
                                    <Label x:Name="lblCollector"
                                           Margin="0,1"
                                           Content="Collector" />
                                    <ComboBox x:Name="cboCollector"
                                              Style="{DynamicResource RoundedComboBox}"
                                              Text="{Binding CollectorName}" />
                                </StackPanel>
                                <StackPanel x:Name="pnlBranch" Margin="0,4">
                                    <Label x:Name="lblBranch"
                                           Margin="0,1"
                                           Content="Branch" />
                                    <ComboBox x:Name="cboBranch"
                                              Style="{DynamicResource RoundedComboBox}"
                                              Text="{Binding BranchName}" />
                                </StackPanel>
                                <StackPanel x:Name="pnlDepartment" Margin="0,4">
                                    <Label x:Name="lblDepartment"
                                           Margin="0,1"
                                           Content="Department" />
                                    <ComboBox x:Name="cboDepartment"
                                              Style="{DynamicResource RoundedComboBox}"
                                              Text="{Binding Department}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
